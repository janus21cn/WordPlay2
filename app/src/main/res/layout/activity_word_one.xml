<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wordone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wonder4.wordplay2.WordOne"
    android:background="@drawable/word1">
    <Button
        android:id="@+id/btn_home"
        android:background="@drawable/home"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sheep"
        android:textSize="80dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/sheep"
        android:layout_below="@+id/btn_home"
        android:layout_toStartOf="@+id/btn_right" />
    <Button
        android:id="@+id/btn_chinese"
        android:background="@drawable/chinese"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/sheep"
        android:layout_alignStart="@+id/sheep" />
    <Button
        android:id="@+id/btn_english"
        android:background="@drawable/english"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/btn_turkish"
        android:layout_alignEnd="@+id/sheep" />
    <Button
        android:id="@+id/btn_turkish"
        android:background="@drawable/turkish"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_alignTop="@+id/btn_chinese"
        android:layout_toEndOf="@+id/btn_chinese"
        android:layout_marginStart="26dp" />
    <Button
        android:id="@+id/btn_left"
        android:background="@drawable/left"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/btn_right"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/btn_right"
        android:background="@drawable/right"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>
